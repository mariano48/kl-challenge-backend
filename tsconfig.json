{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "api",
    "strict": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
